@{
    ViewData["Title"] = "Home Page";
}


<style>
    .hidden {
        display: none;
    }
</style>


<!-- App Capsule -->
<div id="appCapsule">

    <div class="section">
        <div class="splash-page mt-5 mb-5">
            <div class=" mb-3">
                <img src="~/assets/img/apple-touch-iconx.png" height="80" />
            </div>
            <h2 class="mb-2">Brigho</h2>
            <p>
                You just recovered from an error problably due to slow or no internet connection
            </p>
        </div>
    </div>

    <div class="fixed-bar">
        <div class="row">
            <div class="col-12">
                <a href="/admin" class="btn btn-lg btn-outline-primary btn-block">
                    <div class="in">
                        <div>Let's Start Again</div>
                    </div>
                </a>

            </div>
        </div>
    </div>

    <!-- Iconed Action Sheet -->
    <div class="modal fade action-sheet" id="actionSheetBuyerIconed" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="action-sheet-content">
                        <div class="iconbox text-primary">
                            <ion-icon name="lock-closed-outline"></ion-icon>
                        </div>
                        <div class="text-center p-2">
                            <h3>User Login</h3>
                        </div>
                        <a href="/admin" class="btn btn-primary btn-lg btn-block">Basic Login</a> <hr />
                        <a href="javascript:LoadFinger();" class="btn btn-primary btn-lg btn-block">Fingerprint Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- * Iconed Action Sheet -->
    <!-- Iconed Action Sheet -->
    <div class="modal fade action-sheet" id="actionSheetSellerIconed" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="action-sheet-content">
                        <div class="iconbox text-primary">
                            <ion-icon name="finger-print"></ion-icon>
                        </div>
                        <div class="text-center p-2">
                            <input type="text" onkeyup="if (/\D/g.test(this.value)) this.value = this.value.replace(/\D/g,'')" maxlength="11" id="fingerprint_phone_number" placeholder="Enter your Phone Number" class="form-control" />
                        </div>
                        <a href="#" id="btnCheckUserPhone" class="btn btn-primary btn-lg btn-block">Fingerprint Login</a>
                        <button class="btn btn-primary btn-block shadowed hidden" type="button" disabled id="btnProgress">
                            <span class="spinner-border spinner-border-sm mr-05" role="status" aria-hidden="true"></span>
                            Processing...
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- * Iconed Action Sheet -->

    <div class="modal fade dialogbox" id="DialogIconedDanger" data-backdrop="static" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-icon text-danger">
                    <ion-icon name="close-circle"></ion-icon>
                </div>
                <div class="modal-header">
                    <h5 class="modal-title">Error</h5>
                </div>
                <div class="modal-body">
                    There is something wrong. please enter a valid Login Phone Number and try again.
                </div>
                <div class="modal-footer">
                    <div class="btn-inline">
                        <a href="#" class="btn" data-dismiss="modal">CLOSE</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- * App Capsule -->
<script type="text/javascript">
    var LoadFinger = function () {

        if (localStorage.getItem('phone') != null) {
            var identity = localStorage.getItem('phone');
            location.href = "activity:http://brigho.com?phonecall=" + identity;
        } else {
            $("#actionSheetBuyerIconed").modal('hide');
            $("#actionSheetSellerIconed").modal('show');
        }
    }
     
</script>